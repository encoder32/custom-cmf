{% set lng = lng(object) %}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            <h1>{{ render(fields.getItem('title')) }}</h1>
            <p>{{ render(fields.getItem('summary')) }}</p>
            <p>{{ render(fields.getItem('description')) }}</p>

            {{ render(categoryTree, {title: lng.childrenCategories}) }}

            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <span class="navbar-brand">{{ render(fields.getItem('user')) }}</span>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="navbar-brand">
                            {% set created = fields.getItem('created') %}
                            {{ created.getConfig().title }}: {{ render(created) }}
                        </li>
                        <li class="navbar-brand">
                            {% set updated = fields.getItem('updated') %}
                            {% if updated.getValue() and updated.getValue() != created.getValue()%}
                                {{ updated.getConfig().title }}: {{ render(updated) }}
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    {{ render(actionLinks) }}
</div>
