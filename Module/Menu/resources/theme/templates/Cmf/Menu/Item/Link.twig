{% set menu = object.menu %}
{% set parent = menu.parent %}
{% if object.target %}
    {% set target = ' target="' ~ object.target ~ '"' %}
{% else %}
    {% set target = '' %}
{% endif %}

{% if object.parent.parent and menu %}
    <li class="dropdown-submenu">
        <a href="{{ object.url }}" title="{{ object.hint }}" class="dropdown-toggle" data-toggle="dropdown"{{ target }}>{{ object.title }}</a>
        {% if menu %}
            {{ render(menu) }}
        {% endif %}
    </li>
{% elseif menu %}
    <li class="dropdown">
        <a href="{{ object.url }}" title="{{ object.hint }}" class="dropdown-toggle" data-toggle="dropdown"{{ target }}>{{ object.title }} <b class="caret"></b></a>
        {% if menu %}
            {{ render(menu) }}
        {% endif %}
    </li>
{% else %}
    <li>
       <a href="{{ object.url }}" title="{{ object.hint }}"{{ target }}>{{ object.title }}</a>
    </li>
{% endif %}
