<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            <h1>{{ render(fields.getItem('title')) }}</h1>
            <p>{{ render(fields.getItem('text')) }}</p>


            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <span class="navbar-brand">{{ render(fields.getItem('user')) }}</span>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="navbar-brand">
                            {% set created = fields.getItem('created') %}
                            {{ created.getConfig().title }}: {{ render(created) }}
                        </li>
                        <li class="navbar-brand">
                            {% set updated = fields.getItem('updated') %}
                            {% if updated.getValue() and updated.getValue() != created.getValue()%}
                                {{ updated.getConfig().title }}: {{ render(updated) }}
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    {{ render(actionLinks) }}
</div>

{{ blockContainer('after-content') }}
{{ render(commentTree) }}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    {{ render(commentForm) }}
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
    </div>
</div>